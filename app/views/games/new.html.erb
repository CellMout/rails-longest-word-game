
<div class="container w-50">
  <h1 class="ms-2">New game</h1>

  <div class="d-flex justify-content-between mt-3">
    <% @grid.each do |letter|%>
      <div class="card bg-primary text-light flex-fill py-3 mx-2 text-center shadow font-weight-bold"><%= letter %></div>
    <% end %>
  </div>

  <form action="/score" method="post" data-turbo="false" class="form-group mt-3">
    <label for="word" class="mx-2">What is the longest word you can find?</label>
    <div class="input-group my-2">
      <input type="text" name="word" class="form-control ms-2" id="word" placeholder="Enter your best word here..">
      <input type="submit" value="Play" class="btn btn-primary me-2">
    </div>
    <%= hidden_field_tag :start_time, "#{@start_time}" %>
    <%= hidden_field_tag :grid, "#{@grid}"%>
    <%= hidden_field_tag :time_end, "#{Time.now}" %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>

</div>
